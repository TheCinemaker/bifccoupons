{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2021", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": true
  },
  "include": ["netlify/functions/**/*.ts", "frontend/src/**/*.ts", "frontend/src/**/*.tsx"]
}
